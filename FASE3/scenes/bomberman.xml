<scene>
  <group>
    <translate Y="-500"/>
    <!-- Feet-->
    <group>
      <scale X="4" Y="4" Z="4"/>
  		<color R="204" G="0" B="204"/>
      <translate Y="-1000"/>
      <!-- Right Foot -->
      <group>
        <translate X="-100"/>
        <model file="objects/bomberman_sphere.3d"/>
      </group>
      <!-- Left Foot -->
      <group>
        <translate X="100"/>
        <model file="objects/bomberman_sphere.3d"/>
      </group>
    </group>

    <!-- Legs -->
    <group>
      <scale X="4" Y="8" Z="4"/>
  		<color R="160" G="160" B="160"/>
      <translate Y="-500"/>
      <!-- Right Leg -->
      <group>
        <translate X="-100"/>
        <model file="objects/bomberman_cylinder.3d"/>
      </group>
      <!-- Left Leg -->
      <group>
        <translate X="100"/>
        <model file="objects/bomberman_cylinder.3d"/>
      </group>
    </group>

    <!-- Torso -->
    <group>
      <!-- Body -->
      <group>
        <scale X="15" Y="15" Z="15"/>
        <translate Y="400"/>
        <color R="51" G="51" B="255"/>
        <model file="objects/bomberman_sphere.3d"/>
