        <!-- Left Eye -->
        <group>
          <scale X="0.1" Y="1" Z="0.1"/>
          <translate Z="120" X="40"/>
          <model file="objects/bomberman_sphere.3d"/>
        </group>
        <!-- Left Eyebrow -->
        <group>
          <scale X="1" Y="3" Z="1"/>
          <rotate angle="120" Z="1"/>
          <translate X="40" Y="70" Z="120"/>
          <model file="objects/bomberman_cone.3d"/>
        </group>
      </group>
      <!-- Antenna -->
      <group>
        <rotate angle="-45" X="1"/>
        <translate Y="120" Z="-20"/>
        <!-- Base -->
        <group>
          <color R="160" G="160" B="160"/>
          <model file="objects/bomberman_cylinder.3d"/>
        </group>
        <!-- Tip -->
        <group>
          <scale X="0.7" Y="0.7" Z="0.7"/>
          <color R="204" G="0" B="204"/>
          <translate Y="60"/>
          <model file="objects/bomberman_sphere.3d"/>
        </group>
      </group>
    </group>
