			</group>
			<group>
				<translate Y="50"/>
				<model file="objects/light_box.3d"/>
			</group>
			<group><!--Esfera que faz a ligação entre estrutura do candeeiro-->
				<scale X="0.13" Y= "0.13" Z ="0.13"/>
