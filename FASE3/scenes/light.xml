				<group><!--Boxes que simulam a estrutura do candeeiro-->
					<color R="150" G="150" B="150"/>
					<rotate angle="-50" Z="1"/>
					<translate X="-68" Y="6"/>
					<model file="objects/light_box.3d"/>
					<group>
						<color R="150" G="150" B="150"/>
						<translate X="-10"/>
						<model file="objects/light_box.3d"/>
					</group>
					<group><!--Esfera que faz a ligação entre estrutura do candeeiro e a lâmpada-->
						<scale X="0.12" Y= "0.12" Z ="0.12"/>
						<color R="100" G="100" B="100"/>
						<translate X="-20"/>
						<model file="objects/light_esfera.3d"/>
